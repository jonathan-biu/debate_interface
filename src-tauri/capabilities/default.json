{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "fs:default",
    "core:path:default",
    "core:path:allow-dirname",
    "fs:allow-app-write",
    "fs:allow-app-read",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-exists",
    "fs:allow-create",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$DATA"
        },
        {
          "path": "$DATA\\debate"
        },
        {
          "path": "$DATA\\debate\\*"
        }
      ]
    }
  ]
}